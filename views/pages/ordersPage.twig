{% extends '/templates/base_concept.twig' %}

{% block linksScript %}
    <link rel="stylesheet" href="/views/stylesheet/styleOrders.css">
{% endblock %}

{% block content %}
    <!-- User Profile Section -->
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-md-4 user-profile-card">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <a href="/index.php?action=profile&id={{ client.id_people }}">
                            <img src="/image/1.png" alt="User Avatar" class="rounded-circle mb-3 user-avatar">
                        </a>
                        {% if client.name is not empty %}
                            <h4 class="text-primary">{{ client.name }} {{ client.surname }}</h4>
                        {% endif %}
                        {% if client.email is not empty %}
                            <p class="text-muted">{{ client.email }}</p>
                        {% endif %}
                        <div class="progress mt-3 mb-4">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">70% Complete</div>
                        </div>
                        <div class="list-group list-group-flush">
                            <a href="/index.php?action=setting&id={{ client.id_people }}" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-cog me-2 text-primary"></i> Settings
                            </a>
                            <a href="/index.php?action=orders&id={{ client.id_people }}" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-box me-2 text-success"></i> Orders
                            </a>
                            <a href="/index.php?action=rental&id={{ client.id_people }}" class="list-group-item list-group-item-action d-flex align-items-center ">
                                <i class="fas fa-handshake me-2 text-info"></i> Request Rental
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-sign-out-alt me-2 text-warning"></i> Log Out
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders Overview Section -->
            <div class="col-md-8">
                <h2 class="text-center mb-4">Orders Overview</h2>
                <!-- Summary and Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5>Total Orders</h5>
                                <p class="card-text display-4">150</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5>Total Spending</h5>
                                <p class="card-text display-4">$50,000</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5>Most Frequent Route</h5>
                                <p class="card-text">Hamburg Port - Odessa Port</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5>Order Completion Rate</h5>
                                <p class="card-text display-4">80%</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders Progress -->
                <div class="mb-4">
                    <h5>Orders Progress</h5>
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">80% Completed</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders List -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>All Orders</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Client Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Price</th>
                        <th>Details</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>12345</td>
                        <td>John Doe</td>
                        <td>2023-11-05</td>
                        <td>2023-12-05</td>
                        <td><span class="badge bg-success">Completed</span></td>
                        <td>$500</td>
                        <td><a href="/orders/12345" class="btn btn-sm btn-primary">View Details</a></td>
                    </tr>
                    <tr>
                        <td>12346</td>
                        <td>Jane Smith</td>
                        <td>2023-10-15</td>
                        <td>2023-11-15</td>
                        <td><span class="badge bg-warning">Pending</span></td>
                        <td>$750</td>
                        <td><a href="/orders/12346" class="btn btn-sm btn-primary">View Details</a></td>
                    </tr>
                    <!-- More orders -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
