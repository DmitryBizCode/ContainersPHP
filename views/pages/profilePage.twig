{% extends '/templates/base_concept.twig' %}

{% block linksScript %}
    <link rel="stylesheet" href="/views/stylesheet/styleProfile.css">
{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <img src="/image/1.png" alt="User Avatar" class="rounded-circle mb-3 user-avatar">
                        {% if client.name is not empty %}<h4 class="card-title text-primary">{{client.name}} {{client.surname}}</h4>{% endif %}
                        {% if client.email is not empty %}<p class="text-muted">{{client.email}}</p>{% endif %}
                        <div class="progress mt-3 mb-4">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">70% Complete</div>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-cog me-2 text-primary"></i> Settings
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-box me-2 text-success"></i> Orders
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center text-info">
                            <i class="fas fa-handshake me-2"></i> Request Rental
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-sign-out-alt me-2 text-warning"></i> Log Out
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <!-- Personal Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            {% if client.name %}
                                <li class="list-group-item">
                                    <strong>Full Name:</strong> {{ client.name }} {{ client.surname }}
                                </li>
                            {% endif %}
                            {% if client.email %}
                                <li class="list-group-item">
                                    <strong>Email Address:</strong> {{ client.email }}
                                </li>
                            {% endif %}
                            {% if client.phone_number %}
                                <li class="list-group-item">
                                    <strong>Phone Number:</strong> {{ client.phone_number }}
                                </li>
                            {% endif %}
                            {% if client.address %}
                                <li class="list-group-item">
                                    <strong>Address:</strong> {{ client.address }}
                                </li>
                            {% endif %}
                            {% if client.country %}
                                <li class="list-group-item">
                                    <strong>Country:</strong> {{ client.country }}
                                </li>
                            {% endif %}
                        </ul>
                    </div>

                </div>

                <!-- Recent Container Activity Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Recent Container Activity</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="text-primary">Container Details</h6>
                        <ul class="list-group mb-3">
                            <li class="list-group-item"><strong>Container Name:</strong> Container XYZ</li>
                            <li class="list-group-item"><strong>Dimensions (WxLxH):</strong> 2.5m x 6.0m x 2.7m</li>
                            <li class="list-group-item"><strong>Country:</strong> Germany</li>
                            <li class="list-group-item"><strong>IoT Enabled:</strong> Yes</li>
                        </ul>
                        <h6 class="text-primary">Rental Information</h6>
                        <ul class="list-group mb-3">
                            <li class="list-group-item"><strong>Rental Start Date:</strong> 2023-11-01</li>
                            <li class="list-group-item"><strong>Rental End Date:</strong> 2023-12-01</li>
                            <li class="list-group-item"><strong>Price:</strong> $1200.00</li>
                        </ul>
                        <h6 class="text-primary">Route Information</h6>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Origin Port:</strong> Odesa port</li>
                            <li class="list-group-item"><strong>Destination Port:</strong> Kiel port</li>
                            <li class="list-group-item"><strong>Distance:</strong> 555 km</li>
                        </ul>
                    </div>
                </div>

                <!-- Order History Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order History</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>12345</td>
                                <td>2023-11-05</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td>$250.00</td>
                                <td><a href="#" class="btn btn-sm btn-secondary">View</a></td>
                            </tr>
                            <tr>
                                <td>12346</td>
                                <td>2023-10-20</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>$150.00</td>
                                <td><a href="#" class="btn btn-sm btn-secondary">View</a></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
